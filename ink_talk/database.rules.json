{
  "rules": {
    ".read": false,
    ".write": false,
    "rt": {
      "rooms": {
        "$roomId": {
          "members": {
            ".read": "auth != null",
            "$uid": {
              ".write": "auth != null && auth.uid == $uid"
            }
          },
          "events": {
            ".indexOn": ["ts"],
            ".read": "auth != null && root.child('rt').child('rooms').child($roomId).child('members').child(auth.uid).val() == true",
            ".write": "auth != null && root.child('rt').child('rooms').child($roomId).child('members').child(auth.uid).val() == true"
          }
        }
      }
    }
  }
}
